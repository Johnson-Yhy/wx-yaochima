<template name="restaurantProfile">
  
  <view class="restaurant_wrapper">
    <view class="profile_wrapper">
      <view class="restaurant_banner" style="background-image: linear-gradient(-180deg, rgba(255,255,255,0.00) 31%, rgba(35,35,35,0.47) 90%, #000000 100%), url({{mainPhoto}})">
        <view class="empty"></view>
        <text class="h1 white_text">{{name}}</text>
      </view>

      <!-- Restaurant Profile Details Subheader -->
      <view class="restaurant_details white_text text_size">

        <view class="row">
          <view class="rating span">
            <view class="icon-rating">
              <image class="icon-rating icon" src='../../assets/images/icons/svg/icon_five_star.svg'/>
            </view>
            {{rating}}/5 stars
          </view>

          <view class="category span">
            <view class="icon-category icon">
              <image class="icon-category icon" src='../../assets/images/icons/svg/icon_category.svg'/>
            </view>
            {{category}}
          </view>

          <view class="price span">
            <image class="icon-price icon" src='../../assets/images/icons/svg/icon_price.svg'/>
            <text class="price-text orange_text">
              ￥{{price}}
              <text class="per person"> 人均</text>
            </text>
          </view>

        </view>


        <view class="row">

          <view class="distance span">
            <view class="icon-distance">
              <image class="icon-distance icon" src='../../assets/images/icons/svg/icon_phone.svg'/>
            </view>
            <text>{{distance}}KM</text>
          </view>

            <view class="travel-time span">
              <view class="icon-travel">
                <image class="icon-travel icon" src='../../assets/images/icons/svg/icon_travel.svg'/>
              </view>
              <text>{{travel-time}}分钟</text>
            </view>

            <view class="phone span">
              <view class="icon-phone">
                <image class="icon-phone icon" src='../../assets/images/icons/svg/icon_phone.svg'/>
              </view>
              <text>{{phone}}</text>
            </view>
            
        </view>


        <view class="row small-text">
          <view class="address inline span">
              <view class="icon-address">
                <image class="icon-address icon" src='../../assets/images/icons/svg/icon_map.svg'/>
              </view>
              <text>{{address}}</text>
            </view>
        </view>
      </view>
    </view>



      <!-- Lock Restaurant Parameters -->
  <view class="button_wrap">
      <view id="restaurant_category " class="button row h2 {{categoryLocked ? 'lock' : 'unlock' }}" bindtap='toggleCategory'>
        <view class="empty"></view>
        <view class="category_text orange_text">
          <text>{{category}}</text>
        </view>
        <view class="category_icon">
          <image class="category_icon_img" src="#"/>
        </view>
      </view>
      <view id = "restaurant_price" class="button row h2 {{priceLocked ? 'lock' : 'unlock' }}" bindtap='togglePrice'>
        <view class="empty"></view>
        <view class="price_button_text">
          <text class="price orange_text">￥{{price}}</text>
          <text class="per person orange_text"> 人均</text>
        </view>
        <view class="price_button_icon"></view>
      </view>
      <view class="button row" id="shake">
        <view class="shake_icon"></view>

        <view class="shake_text text-size">
          <text class="white_text">Not Your Flavor?</text>
          <text class="orange_text" bindtap="shakeTest"> Shake Again</text>
        </view>
        <view class="shake_icon"></view>
      </view>
    </view>
  </view>
</template>