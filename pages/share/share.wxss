.catMenu {
  text-align: center;
  background-image: linear-gradient(0deg, #BADEEE 1%, #C7E6F3 50%, rgba(210,236,248,0.83) 74%, rgba(213,238,249,0.00) 92%, rgba(0,0,0,0.00) 100%);
  border-radius: 2rpx;
  width: 100%;
  z-index: -2;
  height: 947rpx;
  color: white;
  transform: translate(0, 160rpx);
  display: flex;
  flex-direction: row;
  text-shadow: 2px 2px 3px #F0F6F8;
  justify-content: center;
}

.catMenu-text {
  margin-top: 300rpx;
}

.peek {
  height: 679rpx;
  width: 100%;
  position: absolute;
  overflow: hidden;
  bottom: -335rpx;
  animation: shake .8s cubic-bezier(.36,.07,.19,.97) 15s both infinite;
  transform: translate3d(0, 0, 0); 
}

@keyframes shake {
  0% {
    transform: translate3d(0px, 0, 0);
  }
  3% {
    transform: translate3d(3px, 0, 0);
  }
  6% {
    transform: translate3d(-3px, 0, 0);
  }
  10% {
    transform: translate3d(0px, 0, 0);
  }
  13% {
    transform: translate3d(3px, 0, 0);
  }
  16% {
    transform: translate3d(-3px, 0, 0);
  }
  20% {
    transform: translate3d(0px, 0, 0);
  }
  100% {
    transform: translate3d(0px, 0, 0);
  }

}

