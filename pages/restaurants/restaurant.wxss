.main-image {
  zoom: aspectFill;
  crop: topLeft;
  z-index: 1;
}

.restaurant_banner {
  width: 100vw;
  max-width: 100vw;
  height: 35vh;
  display: flex; 
  flex-direction: column;
  justify-content: space-between;
  background-position: center;
  background-size: cover;
  border-bottom: 8px solid #F5A623;
}

.restaurant_details {
  /* padding: 10px;  */
  /* background-color: black; */
  color: white;
  display: flex;
  flex-direction: column;
  text-align: center;
  padding: 10px;
  height: 15vh;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-around; 
  text-align: center;
  padding: 5px;
  vertical-align: center;
  /* flex-grow: 1; */
}

.span {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 5px;
  text-align: center;

}

#shake {
  background-color: black;
  padding: 10px;
}

.button_wrap {
  display: flex;
  flex-direction: column;
  align-content: stretch;
  flex: auto;
  flex-grow: 1;
}
 .restaurant_wrapper {
  display: flex;
  flex-direction: column;
  text-align: center;
  height: 100vh; 
  min-height: 100vh;
  max-height: 100vh;
  align-content: stretch;

} 

.button {
  background-color: #4A4A4A;
  flex: auto;
  flex-grow: 1;
  /* padding: 15px 10px;  */
}

.orange_text {
  color: #F5A623;
}

.white_text {
  color: white;
}

.grey-text {
  color: #353535;
}

.h1 {
  font-size: 34px;
  z-index: 2;
  text-shadow: 2px 2px .5;
  line-height: 1;
  padding: 5px 15px;
  margin-bottom: 15px;
}

.h2 {
  font-size: 24px;
}

.text_size {
  font-size: 14px;
}

