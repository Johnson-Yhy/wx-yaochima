.main-image {
  zoom: aspectFill;
  crop: topLeft;
  z-index: 1;
}

audio {
  display: none;
}
 .restaurant_wrapper {
  display: flex;
  flex-direction: column;
  text-align: center;
  height: 100vh; 
  min-height: 100vh;
  max-height: 100vh;
  align-content: stretch;
  background-color: #F7F6F6;
  /* background-image: linear-gradient(-226deg, #F7F6F6 1%, #EEEEEE 35%, #D8D8D8 100%); */
  border: 0 solid rgba(151,151,151,0.30);
  box-shadow: 1px 2px 5px 0 rgba(0,0,0,0.22);
  align-content: stretch;

} 

.restaurant_banner {
  width: 100vw;
  max-width: 100vw;
  height: 36vh;
  display: flex; 
  flex-direction: column;
  justify-content: space-between;
  background-position: center;
  background-size: cover;
  border-bottom: 16rpx solid #F5A623;
}

.restaurant_details {
  /* padding: 10px;  */
  /* background-color: black; */
  color: white;
  display: flex;
  flex-direction: column;
  text-align: center;
  padding: 18rpx;
  height: 15vh;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-around; 
  text-align: center;
  padding: 9rpx;
  vertical-align: center;
  margin: 28rpx 0rpx;
  /* flex-grow: 1; */
}

.span {
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 32rpx;
  text-align: center;
}

.address {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis
}

.address-text {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis
}

#shake {
  background-color: black;
  padding: 18rpx;
}

.button_wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: stretch;
  justify-content: center;
  padding: 18rpx;
}

.button {
  flex: auto;
  flex-grow: 1;
  flex-direction: row;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 425rpx;
  min-width: 425rpx;
  height: 55rpx;
  min-height: 65rpx;
  margin: 20rpx 0rpx;
  border: 1.8rpx solid #888888;
  background: rgba(242,242,242,0.45);
  border: 1.8rpx solid #979797;
  box-shadow: 0 0 9rpx 1.8rpx #D8D8D8;
  border-radius: 54rpx;
  position: relative;
  color: #888888;
  z-index: 999;
}

.category_text, .price_button {
  display: flex;
  align-items: center;
}

#restaurant_price {
  display: flex;
  align-items: center;
}

.orange_text {
  color: #F5A623;
}

.white_text {
  color: white;
}

.grey-text {
  color: #353535;
}

.medium-grey-text {
  color: #888888;
}

.h1 {
  font-size: 50rpx;
  z-index: 2;
  text-shadow: 3.6rpx 3.6rpx .5;
  line-height: 1;
  padding: 9rpx 22.5rpx;
  margin-bottom: 27rpx;
  text-shadow: 3.6rpx 3.6rpx 5.4rpx black;
}

.h2 {
  font-size: 32.4rpx;
}

.text_size {
  font-size: 27rpx;
}

.unlock {

}
.lock {
  font-weight: bold;
  background-image: linear-gradient(-245deg, #3023AE 0%, #804AC4 100%)  !important;
  border-radius: 54rpx;
  color: white!important;
}



